{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@TRE/*": ["./src/*"]
    },
    "lib": ["es2015", "dom"],
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["./src/**/*"]
}
